<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FA030303"
    tools:context=".FrontView">

    <TextView
        android:id="@+id/textView"
        android:layout_width="423dp"
        android:layout_height="69dp"
        android:layout_x="-56dp"
        android:layout_y="40dp"
        android:text="           C Language Test"
        android:textColor="#FFFFFF"
        android:textSize="37sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="69dp" />

    <EditText
        android:id="@+id/txtname"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_x="22dp"
        android:layout_y="205dp"
        android:ems="10"
        android:hint="Enter Your  Name  :"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="192dp" />

    <Button
        android:id="@+id/btnstarttest"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_x="66dp"
        android:layout_y="399dp"
        android:background="#DCE7E2E2"
        android:onClick="sendname"
        android:text="Start Test  !"
        android:textSize="19sp"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="399dp" />

    <Button
        android:id="@+id/btnabout"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_x="66dp"
        android:layout_y="508dp"
        android:background="#E1E9E0E0"
        android:text="About  !"
        android:textSize="19sp"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="104dp" />
</AbsoluteLayout>